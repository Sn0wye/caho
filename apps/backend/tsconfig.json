{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist",
    "types": ["vitest/globals"],
    "lib": ["ES2022"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    ".eslintrc.cjs",
    "drizzle.config.ts",
    "vitest.config.ts",
    "auth.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
