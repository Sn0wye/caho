{
  "name": "caho",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start": "turbo run start",
    "dev": "turbo run dev",
    "dev:fe": "turbo run dev --filter=frontend...",
    "dev:be": "turbo run dev --filter=backend...",
    "lint": "SKIP_ENV_VALIDATION=1 turbo run lint",
    "format": "prettier --cache --write --plugin-search-dir=. **/*.{cjs,mjs,ts,tsx}",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@caho/tsconfig": "workspace:*",
    "@sn0wye/eslint-config": "latest",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "8.47.0",
    "tsup": "^7.2.0",
    "turbo": "^1.12.4",
    "typescript": "5.2.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
